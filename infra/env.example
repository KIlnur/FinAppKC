# ============================================================
# FinAppKC Environment Variables
# Copy this file to .env and modify as needed
# ============================================================

# ==================== Keycloak Admin ====================
# CHANGE THESE IN PRODUCTION!
KC_ADMIN_USER=admin
KC_ADMIN_PASSWORD=admin

# ==================== Database ====================
KC_DB_NAME=keycloak
KC_DB_USERNAME=keycloak
KC_DB_PASSWORD=keycloak
POSTGRES_PORT=5432

# ==================== Keycloak Server ====================
KC_HOSTNAME=localhost
KC_HTTP_PORT=8080
KC_LOG_LEVEL=INFO

# ==================== Plugin Configuration ====================
# Webhook settings
KC_FINAPP_WEBHOOK_ENABLED=false
KC_FINAPP_WEBHOOK_URL=
KC_FINAPP_WEBHOOK_SECRET=
KC_FINAPP_WEBHOOK_TIMEOUT_MS=5000

# Audit settings
KC_FINAPP_AUDIT_INCLUDE_IP=true
KC_FINAPP_AUDIT_INCLUDE_USER_AGENT=true

# OTP Rate Limiting
KC_FINAPP_OTP_RATE_LIMIT_ENABLED=true
KC_FINAPP_OTP_MAX_ATTEMPTS=5
KC_FINAPP_OTP_LOCKOUT_DURATION_SECONDS=300

# Profile Completion
KC_FINAPP_PROFILE_REQUIRED_FIELDS=firstName,lastName,email

# ==================== Development Tools ====================
MAILHOG_SMTP_PORT=1025
MAILHOG_WEB_PORT=8025

# ==================== Observability ====================
# Uncomment to enable OpenTelemetry
# OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317
# OTEL_SERVICE_NAME=finappkc-keycloak

# ==================== Monitoring Stack ====================
# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
GRAFANA_PORT=3000
GRAFANA_ROOT_URL=http://localhost:3000

# Prometheus
PROMETHEUS_PORT=9090

# Loki
LOKI_PORT=3100

# PostgreSQL Exporter
POSTGRES_EXPORTER_PORT=9187
